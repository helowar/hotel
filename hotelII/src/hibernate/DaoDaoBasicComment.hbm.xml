<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mangocity.hotel.dreamweb.comment.model" default-lazy="false">
<class name="DaoDaoBasicComment" table="htl_comment_daodao" 
		dynamic-insert="true" dynamic-update="true">

		<id name="hotelId" column="hotel_id">
		</id>
		<property name="daodaoId" column="daodao_id"></property>
		<property name="hotelName" column="hotel_name"></property>
		<property name="ratingUrl" column="rating_url"></property>
		<property name="totalNumber" column="total_num"></property>
</class>
</hibernate-mapping>